<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/tab_background" android:endColor="@color/tab_background" android:angle="90"/>
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="7px" android:right="7px" android:left="7px" android:top="3px">
        <shape  android:shape="rectangle">
            <solid android:color="@color/button_color_dark" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>