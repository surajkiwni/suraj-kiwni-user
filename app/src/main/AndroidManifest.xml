            android:name=".activity.ConfirmBookingActivity"
            android:exported="false"
            android:theme="@style/Theme.User.NoActionBar" />
        <activity
            android:name=".activity.BookingDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.User.NoActionBar" />
        <activity
            android:name=".activity.CarListTypeActivity"
            android:exported="false"
            android:theme="@style/Theme.User.NoActionBar" />
        <activity
            android:name=".activity.FindCarActivity"
            android:exported="false"
            android:theme="@style/Theme.User.NoActionBar"
            android:launchMode="singleTop" />
        <activity
            android:name="com.kiwni.app.user.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.User.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kiwni.app.user.OtpActivity"
            android:exported="false"
            android:theme="@style/Theme.User.NoActionBar" />
        <activity
            android:name="com.kiwni.app.user.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.User.NoActionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCC3Tk24iI-IU8SvXkzDUj2i2mBeFjw3-s" />

        <activity
            android:name="com.kiwni.app.user.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:parentActivityName="com.kiwni.app.user.MainActivity"
            android:theme="@style/Theme.User.NoActionBar" />
    </application>

</manifest>