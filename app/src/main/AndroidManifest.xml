<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kiwni.app.user">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher_icons"
        android:label="@string/app_name"
        android:roundIcon="@drawable/rounded_app_icons"
        android:supportsRtl="true"
        android:theme="@style/Theme.User">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <activity
            android:name=".activity.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.User.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.OtpActivity"
            android:exported="false"
            android:theme="@style/Theme.User.NoActionBar" />
        <activity
            android:name=".activity.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.User.NoActionBar" />
        <activity
            android:name=".activity.MapActivity"
            android:exported="false"
            android:theme="@style/Theme.User.NoActionBar" />
        <activity
            android:name=".activity.ConfirmBookingActivity"
            android:exported="false"
            android:theme="@style/Theme.User.NoActionBar" />
        <activity
            android:name=".activity.BookingDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.User.NoActionBar" />
        <activity
            android:name=".activity.CarListTypeActivity"
            android:exported="false"
            android:theme="@style/Theme.User.NoActionBar" />
        <activity
            android:name=".activity.FindCarActivity"
            android:exported="false"
            android:theme="@style/Theme.User.NoActionBar" />

        <activity
            android:name="com.kiwni.app.user.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:parentActivityName="com.kiwni.app.user.MainActivity"
            android:theme="@style/Theme.User.NoActionBar" />
    </application>

</manifest>